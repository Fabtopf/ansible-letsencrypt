{
    "letsencrypt": {
        "base_directory": "/etc/letsencrypt",
        "account_key": "account/account.key"
    },
    "requests": [
        {
            "domain": "example.com",
            "subject_alt": [
                "example.com",
                "*.example.com",
                "*.static.example.com"
            ],
            "cloudflare_token": "account/cloudflare.key",
            "acme": {
                "directory": "https://acme-v02.api.letsencrypt.org/directory",
                "version": 2,
                "email": "domain@example.de"
            },
            "hosts": [
                "localhost"
            ]
        },
        {
            "domain": "example.net",
            "cloudflare_token": "account/cloudflare.key",
            "acme": {
                "directory": "https://acme-v02.api.letsencrypt.org/directory",
                "version": 2,
                "email": "domain@example.de"
            },
            "hosts": [
                "localhost"
            ]
        }
    ]
}
